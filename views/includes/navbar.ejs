<style>
  .btn-search {
    background-color: #fff;
    color: #fff;
    border-radius: 25px;
    padding: 0 1.5rem;
  }

  .btn-search:hover {
    background-color: #fff;
    color: #fff;
  }

  .btn-search i {
    display: inline;
    margin-left: 0.5rem;
    color: #096c6c;
  }

  .btn-search:focus {
    outline: none;
    box-shadow: none;
    background-color: #fff;
    color: #096c6c;
  }

  .btn-search:active {
    background-color: #fff !important;
    color: #096c6c !important;
    border: none;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 3rem;
    text-align: center;
  }

  .navbar-nav {
    padding-top: 0.5rem;
  }

  .nav-link a {
    color: #fff !important;
  }

  .nav-link i {
    margin-right: 0.5rem;
    transition: transform 0.2s ease-in-out;
  }

  .nav-link:hover i {
    transform: scale(1.2);
  }

  .navbar-collapse {
    margin: 1rem;
    padding: 0.5rem;
    background-color: #096c6c; /* Matches navbar background */
    z-index: 1000; /* Ensure it appears above other elements */
  }

  /* Media Query for screens smaller than 990px */
  @media (max-width: 990px) {
    .navbar-collapse {
      padding: 1rem;
    }
  }

  .navbar-toggler:hover {
    border: none; /* Optional: Removes border around the hamburger icon */
  }
</style>

<nav class="navbar navbar-expand-lg border-bottom sticky-top">
  <div class="container-fluid">
    <!-- Brand Icon -->
    <a
      class="navbar-brand"
      href="/listings"
      data-bs-toggle="tooltip"
      data-bs-placement="bottom"
      title="Explore"
    >
      <i class="fa-regular fa-compass"></i>
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <form class="d-flex ms-auto" role="search">
        <input
          class="form-control me-2 search-input"
          type="search"
          placeholder="Search"
          aria-label="Search"
        />
        <button class="btn btn-search" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>
      <div class="navbar-nav ms-auto">
        <!-- User Options -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <!-- Add New Listings -->
            <a
              class="nav-link"
              href="/listings/new"
              data-bs-toggle="tooltip"
              data-bs-placement="bottom"
              title="Add New Listing"
            >
              <i class="fa-solid fa-plus-circle"></i> Add New Listing
            </a>
          </li>
          <% if (!currUser) { %>
          <li class="nav-item">
            <!-- Sign Up -->
            <a
              class="nav-link"
              href="/signup"
              data-bs-toggle="tooltip"
              data-bs-placement="bottom"
              title="Sign Up"
            >
              <i class="fa-solid fa-user-plus"></i> Sign Up
            </a>
          </li>
          <li class="nav-item">
            <!-- Login -->
            <a
              class="nav-link"
              href="/login"
              data-bs-toggle="tooltip"
              data-bs-placement="bottom"
              title="Log In"
            >
              <i class="fa-solid fa-sign-in-alt"></i> Login
            </a>
            <% } %>
          </li>

          <% if (currUser) { %>
          <li class="nav-item">
            <!-- My Wishlist -->
            <a
              class="nav-link"
              href="/wishlist"
              data-bs-toggle="tooltip"
              data-bs-placement="bottom"
              title="My Wishlist"
            >
              <i class="fa-solid fa-heart"></i> My Wishlist
            </a>
          </li>
          <li class="nav-item">
            <!-- Logout -->
            <a
              class="nav-link"
              href="/logout"
              data-bs-toggle="tooltip"
              data-bs-placement="bottom"
              title="Log Out"
            >
              <i class="fa-solid fa-sign-out-alt"></i> Logout
            </a>
            <% } %>
          </li>
        </ul>
      </div>
      <!-- <form class="d-flex" role="search">
          <input class="form-control me-2 search-input" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-search" type="submit"><i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </form> -->
    </div>
  </div>
</nav>

<!-- Include Bootstrap Tooltips Script -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const tooltipTriggerList = [].slice.call(
      document.querySelectorAll('[data-bs-toggle="tooltip"]')
    );
    tooltipTriggerList.forEach(function (tooltipTriggerEl) {
      new bootstrap.Tooltip(tooltipTriggerEl);
    });
  });
</script>
